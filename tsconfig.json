{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "removeComments": true,
        "types": ["node"],
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules", "dist"
    ]
}
